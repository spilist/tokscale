{
  "name": "token-tracker-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Token Usage Leaderboard - The Kardashev Scale for AI Devs",
  "type": "module",
  "workspaces": [
    "packages/*",
    "frontend",
    "benchmarks"
  ],
  "scripts": {
    "postinstall": "bun run build:core",
    "build": "bun run build:core && bun run build:cli",
    "build:cli": "bun run --cwd packages/cli build",
    "build:core": "bun run --cwd packages/core build",
    "cli": "bun run --cwd packages/cli dev",
    "dev:frontend": "bun run --cwd frontend dev"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
